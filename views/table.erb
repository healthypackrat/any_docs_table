<ol class="breadcrumb">
  <li class="breadcrumb-item"><a href=".">Home</a></li>
  <li class="breadcrumb-item active"><%=h title %></li>
</ol>

<ul class="nav nav-tabs mb-3" role="tablist">
  <%- tabs.each do |tab| -%>
    <li class="nav-item">
      <a class="nav-link <%=h tab.fetch(:active) ? 'active' : '' %>" id="<%=h tab.fetch(:id) %>-tab" data-toggle="tab" href="#<%=h tab.fetch(:id) %>" role="tab"><%=h tab.fetch(:label) %></a>
    </li>
  <%- end -%>
</ul>

<div class="tab-content">
  <%- tabs.each do |tab| -%>
    <div class="tab-pane fade <%=h tab.fetch(:active) ? 'show active' : '' %>" id="<%=h tab.fetch(:id) %>" role="tabpanel">
      <table class="table table-hover">
        <thead>
          <tr>
            <th class="index text-right">#</th>
            <th>タイトル</th>
            <th class="count text-right">文字数</th>
          </tr>
        </thead>
        <tbody>
          <%- tab.fetch(:entries).each do |entry| -%>
            <tr>
              <td class="text-right"><%=h entry.fetch('index') %></td>
              <td>
                <%- if entry['category'] -%>
                  <%=h entry['category'] %> -
                <%- end -%>
                <a target="_blank" href="<%=h entry.fetch('url') %>"><%=h entry.fetch('title') %></a>
              </td>
              <td class="text-right"><%=h format_number(entry.fetch('char_count')) %></td>
            </tr>
          <%- end -%>
        </tbody>
      </table>
    </div>
  <%- end -%>
</div>
